
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-users"
                               style="color: #d8ad2e; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>2</h2>
                        <p class="m-b-0">User/s</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i id="iarchive"
                               class="fa fa-building"
                               style="color: #357ae8; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>3</h2>
                        <p class="m-b-0">Restaurant/s</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-utensils"
                               style="color: #17a2b8; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>11</h2>
                        <p class="m-b-0">Dishes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-file"
                               style="color: #9466de; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>14</h2>
                        <p class="m-b-0">Total Order/s</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-th-large"
                               style="color: #505050; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>9</h2>
                        <p class="m-b-0">Categories</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-spinner"
                               style="color: #ad6d9c; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>7</h2>
                        <p class="m-b-0">Pending Order/s</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-check-square"
                               style="color: #28a745; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>1</h2>
                        <p class="m-b-0">Delivered Order/s</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow p-30">
                <div class="media">
                    <div class="media-left meida media-middle">
                        <span>
                            <i class="fa fa-times-circle"
                               style="color: #dc3545; font-size: 2.5em"></i>
                        </span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2>20</h2>
                        <p class="m-b-0">Rejected Order/s</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h2>Restaurants Report</h2>
                </div>
                <div class="col-md-12">
                    <table class="table table-striped table-responsive table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Restaurant Name</th>
                                <th>Total Sales</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            <tr>
                                <td>restaurant_id</td>
                                <td>name</td>
                                <td>price</td>
                            </tr>
                            <tr>
                                <td colspan="4">Records not found</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12">
                    <a href="generate_pdf" class="btn btn-success mt-3">Download Report</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h2>Dishes Report</h2>
                </div>
                <div class="col-md-12">
                    <table class="table table-striped table-responsive table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Dish Name</th>
                                <th>Ordered Count</th>
                            </tr>
                        </thead>
                        <tbody id="myTable">
                            <tr>
                                <td>dish_id</td>
                                <td>dish_name</td>
                                <td>quantity</td>
                            </tr>
                            <tr>
                                <td colspan="4">Records not found</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12">
                    <a href="generate_pdf" class="btn btn-success mb-3">Download Report</a>
                </div>
            </div>
        </div>
    </div>
</div>

