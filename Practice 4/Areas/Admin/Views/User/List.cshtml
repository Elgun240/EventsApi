
@{
    ViewData["Title"] = "List";
}
<div class="container">
    <div class="container shadow-container">
        <div class="alert alert-success">success</div>
        <div class="alert alert-danger">error</div>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <h2>Available Users</h2>
            </div>
            <input class="form-control mb-3"
                   id="myInput"
                   type="text"
                   placeholder="Search .."
                   style="width: 50%" />
        </div>
        <div class="table-responsive-sm">
            <table class="table table-bordered table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        <td>u_id</td>
                        <td>username</td>
                        <td>f_name</td>
                        <td>l_name</td>
                        <td>email</td>
                        <td>phone</td>
                        <td>address</td>
                        <td>
                            <a href="./edit.html" class="btn btn-info mb-1"><i class="fas fa-edit mr-1"></i>Edit</a>
                            <a href="javascript:void(0);" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="8">Records not found</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
