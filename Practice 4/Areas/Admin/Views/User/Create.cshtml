@model RegisterVM
@{
    ViewData["Title"] = "Create";
}

<div class="conatiner">
    <form method="Post" asp-action="Create" class="form-container mx-auto shadow-container"
          style="width: 80%"
          id="myForm">
        <h3 class="mb-3 p-2 text-center">Add User's Information</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="username">Enter Username</label>
                    <input type="text"
                           class="form-control"
                           asp-for="@Model.Username"
                           placeholder="Enter Username"
                            />
                    <span></span>
                </div>
                <div class="form-group">
                    <label for="firstname">Enter First Name</label>
                    <input type="text"
                           class="form-control"
                           asp-for="@Model.Firstname"
                           placeholder="Enter First Name"
                            />
                    <span></span>
                </div>
                <div class="form-group">
                    <label for="lastname">Enter Last Name</label>
                    <input type="text"
                           class="form-control"
                           asp-for="@Model.Lastname"
                           placeholder="Enter Last Name"
                          required />
                    <span></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email"
                           class="form-control"
                           
                           placeholder="Email"
                           asp-for="@Model.Email"
                           required />
                    <span></span>
                </div>
                <div class="form-group">
                    <label for="phone">Contact</label>
                    <input type="number"
                           class="form-control"
                           
                           placeholder="Contact Number"
                           asp-for="@Model.Phone"
                           required/>
                    <span></span>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password"
                           class="form-control"
                           asp-for="@Model.Password"
                           placeholder="Password"
                           required />

                    <span></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <textarea 
                      type="text"
                      style="height: 70px"
                      asp-for="@Model.Adress"
                      class="form-control"
                      ></textarea>
            <span></span>
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Index"asp-controller="Dashboard" class="btn btn-secondary">Back</a>
    </form>
</div>

