@model List<Restaurant>
@{
    ViewData["Title"] = "List";
}

<div class="container my-3">
    
    @if (ViewData.ModelState.ContainsKey("Success"))
    {
        <div class="alert alert-success">@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</div>
    }

    
    @if (ViewData.ModelState.ContainsKey("Error"))
    {
        <div class="alert alert-danger  ">@ViewData.ModelState["Error"].Errors.FirstOrDefault().ErrorMessage</div>

    }

    <div class="row">
        <div class="col-md-6">
            <h4>Available Restaurant/s</h4>
        </div>
        <div class="col-md-6 text-right">
            <input class="form-control mb-3"
                   id="myInput"
                   type="text"
                   placeholder="Search .."
                   style="width: 50%" />
        </div>
        <div class="col-md-12">
            <table class="table table-striped table-responsive table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Website</th>
                        <th>Open Hrs</th>
                        <th>Close Hrs</th>
                        <th>Open Days</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody id="myTable">
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Contact</td>
                            <td>@item.URL</td>
                            <td>@item.OpeningTime</td>
                            <td>@item.ClosingTime</td>
                            <td>@item.ClosingTime</td>
                            <td>@item.Adress</td>
                            <td>
                                <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-info mb-1"><i class="fas fa-edit mr-1"></i>Edit</a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                       
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>


