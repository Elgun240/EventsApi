@{
    ViewData["Title"] = "SendMail";
}
@model MailVM


<h2>Отправить письмо</h2>

<form asp-controller="Email" asp-action="SendMail" method="post">
    <div class="form-group">
        <label for="toEmail">Адрес получателя:</label>
        <input readonly type="email" asp-for="@Model.Email" value="@Model.Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="subject">Тема:</label>
        <input type="text" asp-for="@Model.Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="message">Сообщение:</label>
        <textarea asp-for="@Model.Text" class="form-control" required></textarea>
    </div>
    <button asp-route-id="@Model.Comment.Id" type="submit" class="btn btn-primary">Отправить</button>
</form>