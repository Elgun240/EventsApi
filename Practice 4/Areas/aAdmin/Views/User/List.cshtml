@model List<AppUser>
@{
    ViewData["Title"] = "List";
}
<div class="container">
    <div class="container shadow-container">
        @if (ViewData.ModelState.ContainsKey("Success"))
        {
            <div class="alert alert-success">@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</div>
           
        }
        @if (ViewData.ModelState.ContainsKey("Error"))
        {
            <div class="alert alert-danger  ">@ViewData.ModelState["Error"].Errors.FirstOrDefault().ErrorMessage</div>

        }
        
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <h2>Available Users</h2>
            </div>
            <input class="form-control mb-3"
                   id="myInput"
                   type="text"
                   placeholder="Search .."
                   style="width: 50%" />
        </div>
        <div class="table-responsive-sm">
            <table class="table table-bordered table-striped table-hover table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Action</th>
                    </tr>
                </thead>
               @foreach (var item in Model)
                {
                    <tbody id="myTable">
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Email</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Adress</td>
                            <td>
                                <a asp-action="Manage" asp-route-id="@item.Id" class="btn btn-info mb-1"><i class="fas fa-edit mr-1"></i>Edit</a>
                                <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                            </td>
                        </tr>
                      
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>
