@model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <link rel="stylesheet" type="text/css" href="~/assets/css/profile.css" />
  </head>

  <body>
    <div class="wrapper container">
      <h1 class="text-center my-3">Create Your Account</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
      <form
        method="post"
        asp-action="Register"
        asp-controller="Account"
        class="form-container mx-auto shadow-container"
      >
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="username">Enter Username</label>
              <input
                  
                type="text"
                class="form-control>"
                asp-for="Username"
                placeholder="Enter Username"
                value="username"
              />
              UserName
                        <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
              <label for="lastname">Enter Last Name</label>
              <input
                type="text"
                class="form-control"
                               asp-for="Lastname"
                placeholder="Enter Last Name"
                value="lastName"
              />
              lastName
              <span></span>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                
                class="form-control"
                               asp-for="Password"
                placeholder="Password"
                value="password"
              />
              password
              <span></span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstname">Enter First Name</label>
              <input
                type="text"
                class="form-control"
                               asp-for="Firstname"
                placeholder="Enter First Name"
                value="firstname"
              />
              firstname
              <span></span>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="text"
                class="form-control"
                
                placeholder="Email"
                               asp-for="Email"
                value="email"
              />
              email
              <span></span>
            </div>
            <div class="form-group">
              <label for="phone">Contact</label>
              <input
                type="number"
                class="form-control"
                
                placeholder="Contact"
                               asp-for="Phone"
                value="phone"
              />
              phone
              <span></span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <textarea asp-for="Adress"
            type="text"
            style="height: 70px"
            class="form-control"
            value="address>"
          ></textarea>
          address
          <span></span>
        </div>
        <div class="status text-center text-danger font-weight-bold my-2"></div>
        <button type="submit" class="btn btn-primary btn-block">
          Create Account
        </button>
        <p>
          Already registered?
          <a asp-controller="Account" asp-action="Login">Login Now!</a>
        </p>
      </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  </body>
</html>