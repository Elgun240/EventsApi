@model DishVM
@{
    ViewData["Title"] = "Dish";
}


<div class="container p-4">
    <div class="row welcome text-center welcome">
        <div class="col-12">
            <h1 class="display-4">Menu of @Model.Restaurant.Name</h1>
        </div>
    </div>
    <div class="container res-card">
        <div class="card">
            <img src="~/assets/imgs/uploads/restaurant/@Model.Restaurant.Image"
                 class="card-img-top" />
            <div class="card-body">
                <h4 class="card-title font-weight-bold text-primary">@Model.Restaurant.Name</h4>
                <p class="card-text lead">@Model.Restaurant.Adress</p>
                <p class="card-text">
                    @Model.Restaurant.Description
                </p>
            </div>
        </div>
    </div>
</div>
<div class="container p-4 dish-card">
    <div class="row">
       
        @foreach (var item in Model.Products)
        {
            <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top"
                         src="~/assets/imgs/uploads/dishesh/thumb/@item.Image" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">@item.Name</h4>
                            <h4 class="text-muted">
                                <b>@item.Price</b>
                            </h4>
                        </div>
                        <p class="card-text">
                           @item.Description
                        </p>
                        <a asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr class="my-4" />
</div>
