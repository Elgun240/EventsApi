
@{
    ViewData["Title"] = "Checkout";
}


<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2 class="mt-3">Order Preview</h2>
            <div class="table-responsive-sm">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Dish</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>SubTotal</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        <tr>
                            <td>
                                <img class=""
                                     width="100"
                                     src="~/assets/imgs/uploads/dishesh/thumb/aw-arancini-articleLarge.jpg " />
                            </td>
                            <td>name</td>
                            <td>price</td>
                            <td>quantity</td>
                            <td>subtotal</td>
                        </tr>
                        <tr>
                            <td colspan="5">
                                <p>No Items In Your Cart!!</p>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4"></td>
                            <td class="text-left">Total: <b>$90</b></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="col-md-4">
            <form class="form-container shadow-container" style="width: 80%">
                <h3 class="mt-3">Shipping Details</h3>
                <hr />
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea name="address"
                              type="text"
                              style="height: 70px"
                              class="form-control"></textarea>
                </div>
                <p class="lead mb-0">Cash On Delivery</p>
                <div class="container p-2 mb-3" style="background: #e5e5e5">
                    Pay with Cash on Delivery
                </div>
                <div>
                    <a href="~/cart.html" class="btn btn-warning"><i class="fas fa-angle-left"></i> Back to cart</a>
                    <a href="~/index.html" name="placeOrder" class="btn btn-success">
                        Place Order <i class="fas fa-angle-right"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

