
@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-3">
    <div class="alert alert-success">Success</div>
    <div class="alert alert-danger">Error</div>
    <div class="container shadow-container">
        <h2 class="text-center">Recent Orders</h2>
        <div class="table-responsive-sm">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Order Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        <td>dish_name</td>
                        <td>quantity</td>
                        <td>$90</td>
                        <td>
                            <button type="button"
                                    class="btn btn-secondary"
                                    style="font-weight: bold">
                                <i class="fas fa-bars"></i> Dispatch
                            </button>
                            <button type="button" class="btn btn-warning">
                                <span class="fa fa-cog fa-spin" aria-hidden="true"></span>
                                On Your Way!
                            </button>
                            <button type="button" class="btn btn-danger">
                                <i class="far fa-times-circle"></i> Cancelled
                            </button>
                        </td>
                        <td>{Order date}</td>
                        <td>
                            <a href="javascript:void(0);"
                               onclick=""
                               class="btn btn-danger"><i class="fas fa-trash-alt"></i> Cancel</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6">Records not found</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <h2 class="text-center">All Orders</h2>
        <div class="table-responsive-sm">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Invoice</th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    <tr>
                        2023-09-10
                        <td>{orderDate}</td>
                        <td>dish name</td>
                        <td>quantity</td>
                        <td>$55</td>
                        <td>
                            <button type="button" class="btn btn-success">
                                <i class="fas fa-check"></i> Delivered
                            </button>
                        </td>
                        <td>
                            <a asp-action="Invoice" class="btn btn-info"><i class="fas fa-file-alt"></i> Invoice</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">Records not found</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

