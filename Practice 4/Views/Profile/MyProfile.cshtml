@model ProfileVM
@{
    ViewData["Title"] = "MyProfile";
}

<link rel="stylesheet" href="~/assets/css/profile.css" />
<div class="row">
    <div class="col-md-6">
        <div class="wrapper mt-sm-5">
            @if (ViewData.ModelState.ContainsKey("Success"))
            {
                <div class="alert alert-success">@ViewData.ModelState["Success"].Errors.FirstOrDefault().ErrorMessage</div>
            }
            <div class="alert-danger alert" asp-validation-summary="All"></div>
            <form asp-action="MyProfile" method="post">
                <h4 class="pb-4 border-bottom">Account settings</h4>
                <div class="py-2">
                    <div>
                        <label for="username">Username</label>
                        <input type="text"
                               asp-for="Username"
                               class="bg-light form-control"
                               value="@Model.Username" />
                        
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="firstname">First Name</label>
                            <input type="text"
                                   class="bg-light form-control"
                                   asp-for="Firstname"
                                   value="@Model.Firstname" />
                            
                        </div>
                        <div class="col-md-6">
                            <label for="lastname">Last Name</label>
                            <input type="text"
                                   class="bg-light form-control"
                                   asp-for="Lastname"
                                   value="@Model.Lastname" />
                           
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label for="email">Email Address</label>
                            <input type="text"
                                   class="bg-light form-control"
                                   asp-for="Email"
                                   value="@Model.Email" />
                           
                        </div>
                        <div class="col-md-6">
                            <label for="phone">Contact Number</label>
                            <input type="tel"
                                   class="bg-light form-control"
                                   asp-for="Phone"
                                   value="@Model.Phone" />
                            
                        </div>
                    </div>
                    <div>
                        <label for="address">Address</label>
                        <textarea asp-for="Adress"
                                  type="text"
                                  style="height: 70px"
                                  class="bg-light form-control"></textarea>
                      
                    </div>
                    <div class="py-3 pb-4 border-bottom">
                        <button type="submit" class="btn btn-primary mr-3">
                            Save Changes
                        </button>
                        <a hasp-action="Index" asp-controller="Home" class="btn border button">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
  
</div>

